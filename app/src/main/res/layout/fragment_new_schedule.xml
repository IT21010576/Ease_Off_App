<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Healthcare.NewSchedule">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CalendarView
            android:id="@+id/schedule_date"
            android:layout_width="377dp"
            android:layout_height="302dp"
            android:layout_marginTop="100dp"
            android:outlineSpotShadowColor="@color/DashboardCol4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/save_medSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/DashboardCol3"
            android:text="@string/mindCreateJournalSaveBtn"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.958" />

        <Button
            android:id="@+id/morning_time"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/IndividualDashboardCol2"
            android:text="set morning alarm"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/afternoon_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_date"
            app:layout_constraintVertical_bias="0.161" />

        <Button
            android:id="@+id/night_time"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/IndividualDashboardCol2"
            android:text="set night alarm"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/save_medSchedule"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/afternoon_time"
            app:layout_constraintVertical_bias="0.54" />

        <Button
            android:id="@+id/afternoon_time"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@color/IndividualDashboardCol2"
            android:text="set noon alarm"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/night_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/morning_time"
            app:layout_constraintVertical_bias="0.353" />

        <EditText
            android:id="@+id/schedule_name"
            android:layout_width="378dp"
            android:layout_height="51dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintBottom_toTopOf="@+id/schedule_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.612" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>