<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context=".EatHealthy.DietDashboard"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/NutriFctBtn"
        android:layout_width="263dp"
        android:layout_height="137dp"
        android:backgroundTint="@color/white"
        android:onClick="MoveToNutriFacts"
        android:text="@string/DietDashSub4"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMedScheduleBtn" />

    <Button
        android:id="@+id/addMedScheduleBtn"
        android:layout_width="263dp"
        android:layout_height="137dp"
        android:backgroundTint="@color/white"
        android:onClick="MoveToPlanDiet"
        android:text="@string/DietDashSub2"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/NutriFctBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddBtn_medSchedule" />

    <Button
        android:id="@+id/AddBtn_medSchedule"
        android:layout_width="263dp"
        android:layout_height="137dp"
        android:backgroundTint="@color/white"
        android:onClick="MoveToTrackCalorie"
        android:text="@string/DietDashSub1"
        android:textSize="8pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/addMedScheduleBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>