<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dailyMedDefaultFrag"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="298dp"
        android:layout_height="575dp"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="200dp">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:text="Tips when taking daily medicine"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="140dp"
            android:text="Keep a list\n\nTake your meds at the same time\n\nLeave yourself notes\n\nUse a pillbox\n\nKeep a calendar\n\nSet an alarm\n\n"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/button17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="500dp"
            android:backgroundTint="@color/ThemeCol1Btn"
            android:text="Start Your Schedule Today"/>
    </androidx.cardview.widget.CardView>


</FrameLayout>