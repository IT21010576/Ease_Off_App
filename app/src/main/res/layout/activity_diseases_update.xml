                    app:srcCompat="@drawable/default_image" />

                <Button
                    android:id="@+id/seemore2_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/SeeMoreBtn" />

                <TextView
                    android:id="@+id/lbl2_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <ImageView
                    android:id="@+id/img3_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/default_image" />

                <Button
                    android:id="@+id/seemore3_disUp"
