<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Healthcare.DiseasesUpdate">

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="573dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <ImageView
                    android:id="@+id/img1_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/coronavirus" />

                <Button
                    android:id="@+id/seemore1_disUp"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/SeeMoreBtn" />

                <TextView
                    android:id="@+id/lbl1_disUp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/coronavirusLBL" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <ImageView
                    android:id="@+id/img2_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/ebola" />

                <Button
                    android:id="@+id/seemore2_disUp"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/SeeMoreBtn" />

                <TextView
                    android:id="@+id/lbl2_disUp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/ebolaLBL" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <ImageView
                    android:id="@+id/img3_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/monkeypox" />

                <Button
                    android:id="@+id/seemore3_disUp"
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="260dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/SeeMoreBtn" />

                <TextView
                    android:id="@+id/lbl3_disUp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/monkeypoxLBL" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>