                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/SeeMoreBtn" />

                <TextView
                    android:id="@+id/lbl4_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <ImageView
                    android:id="@+id/img5_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/default_image" />

                <Button
                    android:id="@+id/seemore5_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/SeeMoreBtn" />

                <TextView
                    android:id="@+id/lbl5_disUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>