<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Healthcare.Beauty">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_beauty"
        style="@style/toolbarStyle"
        android:backgroundTint="@color/ThemeCol2"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="675dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <Button
                    android:id="@+id/myhealthyrecBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/DownloadBtn" />

                <ImageView
                    android:id="@+id/beautyimg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/default_image" />

                <TextView
                    android:id="@+id/lblbeauty1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <Button
                    android:id="@+id/but2_beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/DownloadBtn" />

                <ImageView
                    android:id="@+id/beautyimage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/default_image" />

                <TextView
                    android:id="@+id/lblSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <Button
                    android:id="@+id/calCalorieBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/DownloadBtn" />

                <ImageView
                    android:id="@+id/beautyimage3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/default_image" />

                <TextView
                    android:id="@+id/lblbeauty3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4">

                <Button
                    android:id="@+id/but4_beauty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/ThemeCol1Btn"
                    android:text="@string/DownloadBtn" />

                <ImageView
                    android:id="@+id/beautyimage4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="200dp"
                    app:srcCompat="@drawable/default_image" />

                <TextView
                    android:id="@+id/lblbeauty4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="20dp"
                    android:text="TextView" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="20dp"
                android:backgroundTint="@color/ThemeCol4" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="30dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="128dp"
                android:layout_margin="30dp" />
            />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/toolbarheading_beauty"
        style="@style/toolbarFontStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="264dp"

        android:text="@string/BeautyLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backbtn_beauty"
        style="@style/toolbarImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbtn" />

    <EditText
        android:id="@+id/search_beauty"
        android:layout_width="286dp"
        android:layout_height="69dp"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/SearchLbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/serachimg_beauty"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>