<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mindandyou.MindSleep">


    <TextView
        android:id="@+id/mind_sleep_"
        style="@style/headingFontText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/mindSleepHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mind_sleep_start_time"
        android:layout_width="306dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/ThemeCol4"
        android:drawableBottom="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="16dp"
        android:gravity="center"
        android:textColorHint="@color/DashboardCol1"

        android:hint="From"
        android:drawableTint="@color/DashboardCol1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mind_sleep_" />

    <TextView
        android:id="@+id/mind_sleep_end_time"
        android:layout_width="306dp"
        android:layout_height="150dp"
        android:layout_marginTop="28dp"
        android:background="@android:drawable/editbox_background"
        android:backgroundTint="@color/ThemeCol4"
        android:drawableBottom="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="16dp"
        android:drawableTint="@color/DashboardCol1"

        android:gravity="center"
        android:hint="To"
        android:textColorHint="@color/DashboardCol1"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mind_sleep_start_time" />

    <Button
        android:id="@+id/mind_sleep_calc_btn"
        style="@style/buttonStyle"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:text="@string/mindSleepCalculate"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mind_sleep_end_time"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>