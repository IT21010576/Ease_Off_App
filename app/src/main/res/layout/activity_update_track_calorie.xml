<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".EatHealthy.Update_trackCalorie">

    <androidx.cardview.widget.CardView
        android:layout_width="302dp"
        android:layout_height="378dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/tbupdateDate"
                android:layout_width="216dp"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="Date"
                android:inputType="textPersonName"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/tvDisTotalCal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.105"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/tbupdateCmt"
                android:layout_width="216dp"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="Remarks"
                android:inputType="textPersonName"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/updateCalBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDisTotalCal"
                app:layout_constraintVertical_bias="0.552"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/tvDisTotalCal"
                android:layout_width="216dp"
                android:layout_height="56dp"
                android:text="Calculated Total"
                android:textAlignment="center"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/tbupdateCmt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbupdateDate"
                app:layout_constraintVertical_bias="0.338" />

            <Button
                android:id="@+id/updateCalBtn"
                android:layout_width="104dp"
                android:layout_height="54dp"
                android:backgroundTint="@color/DashboardCol3"
                android:text="Update"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.217"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbupdateCmt"
                app:layout_constraintVertical_bias="0.817" />

            <Button
                android:id="@+id/delCalBtn"
                android:layout_width="104dp"
                android:layout_height="54dp"
                android:backgroundTint="@color/DashboardCol3"
                android:text="Delete"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.858"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tbupdateCmt"
                app:layout_constraintVertical_bias="0.492" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>